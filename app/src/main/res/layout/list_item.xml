<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/listItemHeight"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/place_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/imageViewMargin"
        android:layout_marginStart="@dimen/imageViewMargin"
        android:layout_marginRight="@dimen/imageViewMargin"
        android:layout_marginEnd="@dimen/imageViewMargin"/>

    <TextView
        android:id="@+id/place_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/textViewMarginLeft"
        android:layout_marginStart="@dimen/textViewMarginStart"
        android:layout_marginTop="@dimen/textViewMarginTop"
        android:textColor="@color/textColor" />

</RelativeLayout>